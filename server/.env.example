PORT=3010
DB_URL=postgresql://postgres:postgres@localhost:5432/domains
DB_POOL_SIZE=10

# Source table in Postgres (Webatla import). Examples:
# DOMAINS_TABLE=expired_domains
# DOMAINS_TABLE=public.domains
DOMAINS_TABLE=expired_domains

# Optional: Spamhaus Web Query Service token (if you have one).
# If not set, server falls back to DNS DBL checks.
# SPAMHAUS_WQS_TOKEN=your_token_here

# Optional: Spamhaus Submission Portal token (submit.spamhaus.org).
# Used to query your submissions list: /portal/api/v1/submissions/list
# SPAMHAUS_SUBMIT_TOKEN=your_token_here

# Spamhaus Intelligence API (SIA) for real domain reputation lookups.
# Base URL can be https://api.spamhaus.com or https://api.spamhaus.org (depending on your account).
# SPAMHAUS_INTEL_BASE_URL=https://api.spamhaus.com
# SPAMHAUS_INTEL_API_KEY=your_key_here

